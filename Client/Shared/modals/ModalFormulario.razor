<div class="modal fade" id="modal-report" data-bs-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document" style="@estilos_extras">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Titulo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @*<div class="modal-body">
                    @RenderFragment
                </div>*@
            @RenderFragment
        </div>
    </div>
</div>

@code{
    [Parameter] public string Titulo { set; get; }
    [Parameter] public RenderFragment RenderFragment { set; get; }

    [Parameter] public string estilos_extras { set; get; } = "";
}